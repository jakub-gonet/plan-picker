<%= form_for @changeset, Routes.enrollment_path(@conn, :update, %{"id" => @enrollment_id}), fn f -> %>
    <%= if @changeset.action do %>
        <div class="alert alert-danger">
            <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
    <% end %>

    <%= label f, :name, "Enrollment name" %>
    <%= text_input f, :name, required: true %>
    <%= error_tag f, :name %>

    <%= label f, :state, "State" %>
    <%= select f, :state, @state_options %>
    <%= error_tag f, :state %>

    <%= submit "Save changes" %>
<% end %>
