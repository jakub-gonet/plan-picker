<h1>Create an enrollment</h1>

<%= form_for @changeset, Routes.enrollment_path(@conn, :create), fn f -> %>
    <%= if @changeset.action do %>
        <div class="alert alert-danger">
            <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
    <% end %>

    <%= label f, :name, "Enrollment name" %>
    <%= text_input f, :name, required: true %>
    <%= error_tag f, :name %>

    <%= submit "Create enrollment" %>
<% end %>
